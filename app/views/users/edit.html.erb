<h1>Settings</h1>

<%= image_tag(@user.image) %>

<%= form_for @user do |f| -%>
	<p>
		<%= f.label :name, "Name" %>
		<%= f.text_field :name %><br/>
	</p>
	<p>
		<%= f.label :description, "Description" %>
		<%= f.text_area :description, :rows => 3 %><br />
	</p>
	<p>
		<%= f.submit "update", :class => "btn primary" %>
	</p>
<% end -%>

<br >

<%= link_to "All Users", users_path %>

<br />

<%= link_to "My Profile", user_path(@user) %>

<br />

<%= link_to "End My Account", @user, :method => :delete, :confirm => "Are you sure?" %>

<br >

<%= link_to "All Advice", nuggets_path %>