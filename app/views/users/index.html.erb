<div class="row">
	<div class="span11 offset2">
		
		<div class="row">
			<div class="span11">
				<%= form_tag users_path, :method => :get do %>
				  <p>
				    <%= text_field_tag :search, params[:search] %>
				    <%= submit_tag "Search", :name => nil %>
				  </p>
				<% end %>
			</div>
		</div>
		
		<div class="row">
			<div class="span11">
				<h1>Find People You Respect & <br>Build Your Team of Personal Advisors</h1>
			</div>
		</div>
		
		<br>

		<% if !@users.blank? %>
			<%= render "users/main_profile"%>
		<% else %>
		  There are no users
		<% end %>
		
	</div>
</div>