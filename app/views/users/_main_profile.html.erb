<div class="row">
	<div class="span11">

		<% for user in @users %>
			<div class="row">
				
				<div class="span1">
					<%= link_to image_tag(user.image), user_path(user) %>
				</div>
				<div class="span6">
					<strong><%= user.name %></strong>
					<h4><%= link_to pluralize(user.nuggets.count, "piece"), user_path(user) %> of advice</h4>
				</div>
			
			</div>
			<hr>
		<% end %>

	</div>
</div>