<%= render "shared/new_nugget_form" %>


<div class="row">
	<div class="span14 offset2">
		
		<div class="page-header">
			<h6>why listen to <%= first_name(@user.name) %></h6>
		</div>
		
		<div class="span1">
			<%= image_tag(@user.image) %>
		</div>
		<div class="span6">
			<p><%= @user.description %></p>
		</div>

		<% if can? :edit, @user %>
			
			<div class="span3">
				<span class="pull-right">
					<%= link_to "my settings", edit_user_path(@user) %>
				</span>
			</div>
		
			<div class="span3">
				<span class="pull-right">
					<%= link_to "back to all advice", nuggets_path %>
				</span>
			</div>
			
		<% else %>
		  
			<div class="span6">
				<span class="pull-right">
					<%= link_to "back to all advice", nuggets_path %>
				</span>
			</div>
		
		<% end %>
		
	</div>
</div>

<br/>

