<div class="row">
	<div class="span11 offset2">
		<span class="pull-right"><%= link_to "all advice by audience", :action => 'index', :show_type => 'audience' %></span>
	</div>
</div>


<% for nugget in @nuggets %>

<div class="row">
	<div class="span14 offset2">
		<div class="row">
			
			<div class="span10">
				<h5>When it comes to</h5> 
				<h2><%= nugget.topic %>,</h2>
				<h5><%= nugget.audience %> should <%= nugget.body %>.</h5>
			</div>
				
			<br/>
			
			<div class="span1">
				<div class="pull-right">
					<%= link_to 'view', nugget_path(nugget) %>
				</div>
				<br/>
				<% if can? :destroy, nugget %>
					<span class="pull-right">
						<%= link_to "delete", nugget, :method => :delete, :confirm => "Are You deleting advice?" %>
					</span>
				<% end %>
			</div>
			
			<div class="span3">
				<span class="label">From</span> <%= link_to first_name(nugget.user.name), user_path(nugget.user) %><br/>
				<span class="label">To</span> <%= link_to nugget.audience, :find_by => 'audience', :audience_name => nugget.audience %><br/>
				<span class="label">About</span> <%= link_to nugget.topic, :find_by => "topic", :topic_name => nugget.topic, :show_type => "topic" %>
			</div>
			
		</div><hr />
	</div>
</div>

<% end %>