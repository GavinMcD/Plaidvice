<div class="row">
	
	<div class="span11 offset2">
		<% for nugget in @nuggets %>
			<blockquote>
				
				<p>When it comes to <h2><%= link_to nugget.topic, :find_by => "topic", :topic_name => nugget.topic, :show_type => "topic" %>,</h2></p>
				<p><strong><%= nugget.audience %></strong> should <%= nugget.body %>.</p><br/>
			
				<span class="pull-right">
					<small>
						Advice from <%= link_to first_name(nugget.user.name), user_path(nugget.user) %> | 
						<%= link_to 'View', nugget_path(nugget) %> 
						<% if can? :destroy, nugget %>
							| <%= link_to "Delete", nugget, :method => :delete, :confirm => "Are You deleting advice?" %>
						<% end %>
					</small>
				</span>
		
			</blockquote>
			<hr />
			<br/>
		<% end %>
	</div>
	
	<div class="span3">
		<%= link_to "browse all by audience", :action => 'index', :show_type => 'audience' %>
	</div>
	
</div>