<% if !@title.nil? %>
	<div class="row">
		<div class="span11">
			<%= form_tag topic_nuggets_path, :method => :get do %>
			  <p>
			    <%= text_field_tag :search, params[:search] %>
			    <%= submit_tag "Search", :name => nil %>
			  </p>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="span11">
			<%= render "shared/page_header_button" %>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="span11">
			<span class="pull-right">
				<br>
				<%= link_to "back advice about topics", topic_nuggets_path %>
			</span>
			<h1>When <%= @title %></h1>
		</div>
	</div>
<% else %>
	<div class="row">
		<div class="span11">
			<%= form_tag topic_nuggets_path, :method => :get do %>
			  <p>
			    <%= text_field_tag :search, params[:search] %>
			    <%= submit_tag "Search", :name => nil %>
			  </p>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="span11">
			<%= render "shared/page_header_button" %>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="span11">
			<span class="pull-right">
				<%= link_to "advice for audiences", audience_nuggets_path %>
			</span>
			<h1>All Recent Advice about What to Do</h1>
		</div>
	</div>
<% end %>