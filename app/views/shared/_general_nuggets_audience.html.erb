<% for nugget in @nuggets %>

<div class="row">
	<div class="span14 offset2">
		<div class="row">
			
			<div class="span10">
				<h5>A word of advice to</h5> 
				<h2><%= nugget.audience %></h2>
				<h5>about <%= nugget.topic %>: You should <%= nugget.body %>.</h5>
			</div>
				
			<br/>
			
			<div class="span1">
				<div class="pull-right">
					<%= link_to 'view', nugget_path(nugget) %>
				</div>
				<br/>
				<% if can? :destroy, nugget %>
					<span class="pull-right">
						<%= link_to "delete", nugget, :method => :delete, :confirm => "Are You deleting advice?" %>
					</span>
				<% end %>
			</div>
			
			<div class="span3">
				<span class="label">Advice from</span>
				<%= link_to first_name(nugget.user.name), user_path(nugget.user) %><br/>
				<span class="label">Audience</span> <%= nugget.audience %><br/>
				<span class="label">Topic</span> <%= nugget.topic %>
			</div>
			
		</div><hr />
	</div>
</div>

<% end %>