<% if params[:find_by] == "audience" %>
	<%= link_to "give advice to #{truncate(@nuggets.first.audience, :length => 10)}", new_nugget_path, :class => "btn large success" %>			
<% elsif params[:find_by] == "topic" %>
	<%= link_to "give advice on this topic", new_nugget_path, :class => "btn large success" %>			
<% else %>
	<%= link_to "give your advice now", new_nugget_path, :class => "btn large success" %>	
<% end %>