<div class="row">
	<div class="span11 offset2">
		
		<div class="page-header">
			<h2>
				<% if current_user %>
					What's your advice?
				<% else %>
				  You must <%= link_to "Login", "auth/twitter" %> or <%= link_to "Sign Up", root_url %> to give advice
				<% end %>
			</h2>
		</div>

		<form-stacked>
		<fieldset>

			<div class="clearfix">
				<div class="input">

					<%= form_for @nugget do |f| -%>
			
	
						<h4>
							My advice to
							<%= f.text_field :audience, :class => "span4", :placeholder => "a person or	 group of people" %>:
						</h4>
				
						<br>
					
						<h4>	
							when you're <%= f.text_field :topic, :class => "span4", :placeholder => "doing something" %>, 
							you should <%= f.text_field :body, :rows => 2,  :class => "span6", :placeholder => "do this thing"  %> .
						</h4>

						<br/>
			
						<%= f.submit "post it", :class => "btn large success" %>
				

					<% end -%>

				</div>
			</div>

		</fieldset>
		</form-stacked>
		
	</div>

	<% if !current_user %>
		<div class="span3">
			<%= link_to "Sign up now", "/auth/twitter", :class => "btn large primary" %>
		</div>
	<% end %>

</div>