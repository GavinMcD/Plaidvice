<% for nugget in @nuggets %>

<div class="row">
	<div class="span14 offset2">
		<div class="row">
			
			<div class="span2">
				<%= nugget.user.name %><br/>
				<%= link_to image_tag(nugget.user.image), user_path(nugget.user) %>
			</div>
			<div class="span11">
				<h5>When it comes to</h5> 
				<h2><%= nugget.topic %>,</h2>
				<h5><%= nugget.audience %> should <%= nugget.body %>.</h5>
			</div>
				
			<br/>
			
			<div class="span1">
				<div class="pull-right">
					<%= link_to 'view', nugget_path(nugget) %>
				</div>
				<br/>
				<% if can? :destroy, nugget %>
					<span class="pull-right">
						<%= link_to "delete", nugget, :method => :delete, :confirm => "Are You deleting advice?" %>
					</span>
				<% end %>
			</div>
			
		</div><hr />
	</div>
</div>

<% end %>